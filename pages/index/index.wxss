/**index.wxss**/
.userinfo {
	display: flex;
	flex-direction: column;
	align-items: center;
	color: #aaa;
}

.userinfo-avatar {
	overflow: hidden;
	width: 128rpx;
	height: 128rpx;
	margin: 20rpx;
	border-radius: 50%;
}

.usermotto {
	margin-top: 200px;
}

/*
  高德地图组件样式
*/
.map_container {
	position: absolute;
	top: 0;
	bottom: 80px;
	left: 0;
	right: 0;
}
.map {
	width: 100%;
	height: 100%;
}
.map_text {
	position: absolute;
	left: 0;
	right: 0;
	bottom: 0px;
	height: 80px;
	background: #fff;
	padding: 0 15px;
}
text {
	margin: 5px 0;
	display: block;
	font-size: 12px;
}
.h1 {
	margin: 15px 0;
	font-size: 15px;
}

.weather-container {
	position: absolute;
	top: 0;
	bottom: 0;
	left: 0;
	right: 0;
	background: #4d8ad7;
	color: #fff;
	font-size: 18px;
	padding-top: 200rpx;
	padding-left: 150rpx;
}

.loginbtn {
	position: absolute;
	bottom: 200rpx;
}
